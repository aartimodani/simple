extends base

block body
  h1 Dashboard
  p.
    You are now logged in. <a href="/logout">Logout</a>


  h2 Hello, #{user.firstName}  
  //p Email:      #{user.email}
  //p Data:       #{user.data}

  style(type='text/css').
    .numCircle {
      font: 60px Arial, sans-serif;
      width: 2em;
      height: 2em;
      box-sizing: initial;
      background: #666;
      border: 0.1em solid black;
      color: black;
      text-align: center;
      border-radius: 50%;    
      line-height: 2em;
      box-sizing: content-box;
      margin: auto; 
      margin-top: 2em;   
    },
    .FAns{
      margin-top: 2em;
    },
    .ques{
      font: 60px Arial, sans-serif;
      width: 2em;
      height: 2em;  
      margin-top: 2em;   
    }
    
  #content
    .options 
      button#cRoomBtn Create Game
      button#lRoomBtn Join Game
  
  p(hidden).waitMsg
    | Waiting for second Player to join.
  
  p(hidden).joinMsg
    | Select a Game Room to join.
  
  #roomList
    .availList
      button(hidden)#jRoomBtn Join

  #countDown.numCircle(hidden) 
  
  #qOne.ques
  
  #FieldAns(hidden)
    .FAns
      input#answer.ans
      <br/>
      button#sendAns Submit

  